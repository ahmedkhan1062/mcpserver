{
  "name": "aux-mcp",
  "version": "1.0.1",
  "description": "AUX MCP server for AI model context with documentation and resources",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "aux-mcp": "./bin/cli.js",
    "aux-mcp-server": "./bin/cli.js"
  },
  "files": [
    "dist/",
    "bin/",
    "resources/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "dev:watch": "tsx watch src/server.ts",
    "cli": "tsx src/bin/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "server",
    "ai",
    "claude",
    "typescript",
    "aux",
    "smartmap",
    "compliance",
    "consulting"
  ],
  "author": "Ahmed <ahmed@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmed/aux-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ahmed/aux-mcp/issues"
  },
  "homepage": "https://github.com/ahmed/aux-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "fastmcp": "latest",
    "yargs": "^17.7.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
